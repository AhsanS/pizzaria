<div id='cart'>
  <h3>
    Cart
  </h3>
  <ul id="cart_items">
    <% current_cart.items.each do |item| %>
      <li>
        <%= image_tag(item.product.image.url(:mini)) %>
        <%= item.quantity %> 
        <%= link_to item.name, item.product %>
        x
        <%= number_to_currency item.price %>
        <%= link_to "Remove", cart_item_path(item), :method => :delete, :remote => true, :class => 'delete' %>
        <span class="total">
          <%= number_to_currency item.total %>
        </span>
      </li>
    <% end %>
    <li class="total">
      <strong>
        Total: 
        <span class="total">
          <%= number_to_currency current_cart.total %>
        </span>
      </strong>
    </li>
  </ul>
  <%= link_to 'Checkout', cart_path, :class => 'checkout' %>
</div>